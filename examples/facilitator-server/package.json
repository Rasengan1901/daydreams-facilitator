{
  "name": "@daydreamsai/facilitator-server",
  "version": "2.0.0",
  "private": true,
  "description": "x402 Payment Facilitator Server - Verify and settle x402 payments",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "x402-facilitator": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "bun run src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:e2e": "bun run tests/e2e-ci.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun run src/migrate.ts",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:check": "bunx drizzle-kit check"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@coinbase/cdp-sdk": "^1.40.1",
    "@daydreamsai/facilitator": "workspace:*",
    "@elysiajs/node": "^1.0.0",
    "@elysiajs/opentelemetry": "^1.4.9",
    "@elysiajs/static": "^1.4.7",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@x402/core": "^2.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.0",
    "elysia": "^1.0.0",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22"
  }
}
